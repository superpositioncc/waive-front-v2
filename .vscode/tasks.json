{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make",
      "type": "shell",
      "command": "make",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make clean",
      "type": "shell",
      "command": "make clean",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make run",
      "type": "shell",
      "command": "make run",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make install",
      "type": "shell",
      "command": "make install",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make and run",
      "type": "shell",
      "command": "make && make run",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make and rerun",
      "type": "shell",
      "command": "make && killall WAIVE-FRONT-V2; make run",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make clean, make and run",
      "type": "shell",
      "command": "make clean && make && make run",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make clean, make and install",
      "type": "shell",
      "command": "make clean && make && make install",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make clean, make, install and run",
      "type": "shell",
      "command": "make clean && make && make install && make run",
      "problemMatcher": ["$gcc"]
    }
  ]
}
